			<path>./window_box.png</path>
			<size>0.275 0.4888888888888889</size>
			<color>c8c8c8</color>
		</image>
		
		<image name="left_window_box" extra="true">
			<path>./window_box.png</path>		
			<size>0.275 0.4888888888888889</size>
			<color>c8c8c8</color>
		</image>		

		<image name="missing_art" extra="true">
			<path>./missing.png</path>
			<origin>0.5 0.5</origin>
			<size>0.1416666666666667 0.2518518518518519</size>
