		</image>		

		<image name="bar_3" extra="true">
			<path>./info_bar.png</path>
			<size>0.275 0.1111111111111111</size>
			<color>000000</color>
		</image>

		<image name="bar_4" extra="true">
			<path>./rating_bar.png</path>
			<size>0.275 0.1111111111111111</size>
			<color>000000</color>
		</image>

		<image name="player_box" extra="true">
			<path>./player_box.png</path>
			<size>0.0541666666666667 0.0666666666666667</size>
			<color>ff0000</color>		
		</image>

		<text name="publisher_label, developer_label, genre_label, rating_label, played_label" extra="true">
			<fontPath>./../art/TinyUnicode.ttf</fontPath>
			<forceUppercase>1</forceUppercase>
			<fontSize>0.0592592592592593</fontSize>
			<color>ff0000</color>
			<size>0.25 0.0333333333333333</size>
		</text>
		
		<text name="players_label" extra="true">
			<fontPath>./../art/NESCyrillic_gamelist.ttf</fontPath>
			<size>0.0416666666666667 0.0407407407407407</size>
			<fontSize>0.0592592592592593</fontSize>
			<alignment>right</alignment>
			<color>ffffff</color>
			<text>P</text>
		</text>
		
		<text name="publisher_label" extra="true">
			<alignment>left</alignment>
			<text>  Published</text>
		</text>
		
		<text name="developer_label" extra="true">
			<alignment>center</alignment>
			<text>Developed by</text>
		</text>		

		<text name="genre_label" extra="true">
			<alignment>center</alignment>
			<text>Genre</text>
		</text>	

		<text name="rating_label" extra="true">
			<alignment>center</alignment>
			<size>0.09375 0.0333333333333333</size>
			<text>Rating</text>
		</text>	

		<text name="played_label" extra="true">
			<alignment>center</alignment>
			<size>0.09375 0.0333333333333333</size>
			<text>Played</text>
		</text>			
		 
